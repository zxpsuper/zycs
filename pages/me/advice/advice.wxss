
.body {
  background-color: #f9f9f9;
  color: #666;
  font-size: 0.85rem;
  max-width: 640px;
  min-height: 100%;
  overflow-x: hidden;
  margin-top:-10rpx;

}

.detail-wrapper {
  background-color: #fff;
  margin: 0.625rem 0;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.detail-title {
  padding: 0 0.625rem;
  border-bottom: 1px solid #eee;
}

.com-title {
  min-height: 60rpx;
  line-height: 1.2;
  padding-top: 0.3125rem;
  padding-bottom: 0.3125rem;
  width: 100%;
  display: inline-block;
  align-items: center;
}

.h4 {
  font-size: 28rpx;
  font-weight: 600;
  color: #000;
  line-height:52rpx;
}

.detail-content {
  padding: 20rpx;
  color: #666;
  font-size: 28rpx;
}

.send-commit-wrap .sc-body {
  padding-bottom: 20rpx;
  margin-top: 24rpx;
}

.btn {
  color: #fff;
  background-color: #00aac5;
  border: 1rpx solid transparent;
  padding: 8rpx 32rpx;
  font-size: 32rpx;
  line-height: 50rpx;
  text-align: center;
  margin: 0 auto;
  border-radius: 40rpx;
}
